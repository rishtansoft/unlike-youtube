{
  "manifest_version": 3,
  "name": "YouTube Unlike Helper",
  "version": "1.0",
  "description": "YouTube liked videos ro'yxatidan avtomatik o'chirish",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/playlist?list=LL"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Unlike Helper",
    "default_icon": "icon.png"
  }
}

